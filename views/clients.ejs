<% include partials/header.ejs %>
<body>
  <% include partials/navigation.ejs %>

  <main class="container">
    <h1>Client Address Book</h1>

    <table class="table table-striped table-bordered">
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Address</th>
            <th>Company</th>
            <th>Notes</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
        <% listOfClients.map(client => { %>
          <tr>
              <td><%= client.name %></td>
              <td><%= client.email %></td>
              <td><%= client.phone %></td>
              <td><%= client.address %></td>
              <td><%= client.company %></td>
              <td><%= client.notes %></td>
              <td>
                <a href="/edit/<%= client.id %>" type="button" class="btn btn-primary btn-sm">
                  <span class="glyphicon glyphicon-edit"></span>
                </a>
              </td>
              <td>
                <form class="" action="/delete/<%= client.id %>" method="post">
                  <button type="submit" class="btn btn-danger btn-sm" name="delete"><span class="glyphicon glyphicon-trash"></span></button>
                </form>
              </td>
          </tr>
        <% }); %>
        <tr>
          <td colspan="8">
            <div class="text-center">
              <a href="/add" type="button" class="btn btn-sm btn-success">
                <span class="glyphicon glyphicon-plus"></span> Add Client
              </a>
            </div>
          </td>
        </tr>
    </table>
  </main>
<% include partials/footer.ejs %>
