<% include partials/header.ejs %>
<body>
  <% include partials/navigation.ejs %>

  <main class="container">
    <h1>Edit Client</h1>

  <form method="post" class="row">
      <div class="form-group col-sm-6">
          <label for="client-name">Name</label>
          <input type="text" class="form-control input-lg" id="client-name" name="name" value="<%= client.name %>">
      </div>
      <div class="form-group col-sm-6">
          <label for="client-email">Email</label>
          <input type="text" class="form-control input-lg" id="client-email" name="email" value="<%= client.email %>">
      </div>
      <div class="form-group col-sm-6">
          <label for="client-phone">Phone</label>
          <input type="text" class="form-control input-lg" id="client-phone" name="phone" value="<%= client.phone %>">
      </div>
      <div class="form-group col-sm-6">
          <label for="client-address">Address</label>
          <input type="text" class="form-control input-lg" id="client-address" name="address" value="<%= client.address %>">
      </div>
      <div class="form-group col-sm-6">
          <label for="client-company">Company</label>
          <input type="text" class="form-control input-lg" id="client-company" name="company" value="<%= client.company %>">
      </div>
      <div class="form-group col-sm-6">
          <label for="client-notes">Notes</label>
          <textarea type="text" class="form-control input-lg" id="client-notes" name="notes"><%= client.notes %></textarea>
      </div>
      <div class="col-sm-12">
          <hr>
          <!-- <a href="/edit/<%= client.id %>" type="button" class="btn btn-lg btn-danger pull-left" name="delete">Delete</a> -->
          <div class="pull-right">
              <a href="/clients" type="button" class="btn btn-lg btn-default">Cancel</a>
              <button type="submit" class="btn btn-lg btn-success" name="update">Update</button>
          </div>
      </div>
  </form>
  </main>

<% include partials/footer.ejs %>
